<div class="fixed left-1/2 top-1/5 -translate-x-1/2 bg-green-50 border border-green-200 rounded-lg p-4 shadow-lg 
                opacity-0 animate-fade-popover">
    <div class="flex items-center">
        <svg class="w-5 h-5 text-green-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <span class="text-green-800 font-medium">@Message</span>
    </div>
</div>

<style>
    @@keyframes fade-popover {
        0%   { opacity: 0; transform: translateY(-4px); }
        10%  { opacity: 1; transform: translateY(0); }
        80%  { opacity: 1; transform: translateY(0); }
        100% { opacity: 0; transform: translateY(-4px); }
    }

    .animate-fade-popover {
        animation: fade-popover 4s forwards;
    }
</style>

@code {

    [Parameter] public required string Message { get; set; }
}