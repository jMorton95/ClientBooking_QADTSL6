@using ClientBooking.Data.Entities

<div class="space-y-6">
    <div class="bg-white rounded-lg shadow-sm border p-6">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">@ComponentTitle</h1>
                <p class="text-gray-600 mt-2">
                    @ComponentSubTitle
                </p>
            </div>
            <div class="text-sm text-gray-500">
                Total: @ErrorTotalCount entries
            </div>
        </div>
    </div>

    @if (ErrorLogs?.Any() == true)
    {
        <div class="bg-white rounded-lg shadow-sm border overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Timestamp</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Source</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Message</th>
                            @if (ComponentTitle == "Error Logs")
                            {
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Exception</th>
                            }
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var log in ErrorLogs)
                        {
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @log.TimestampUtc.ToString("MMM dd, yyyy HH:mm:ss")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @if (!string.IsNullOrEmpty(log.Source))
                                    {
                                        <div class="flex items-center">
                                            <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                                            </svg>
                                            @log.Source
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">System</span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-900">
                                    <div class="max-w-md">
                                        @if (log.Message.Length > 100)
                                        {
                                            <div class="relative">
                                                <span id="message-short-@log.Id">
                                                    @log.Message.Substring(0, 100)...
                                                    <button type="button" 
                                                            class="text-blue-600 hover:text-blue-800 text-xs font-medium ml-1"
                                                            onclick="toggleMessage('@log.Id', true)">
                                                        Show more
                                                    </button>
                                                </span>
                                                <span id="message-full-@log.Id" class="hidden">
                                                    @log.Message
                                                    <button type="button" 
                                                            class="text-blue-600 hover:text-blue-800 text-xs font-medium ml-1"
                                                            onclick="toggleMessage('@log.Id', false)">
                                                        Show less
                                                    </button>
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            @log.Message
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (ErrorTotalPages > 1)
        {
            <div class="bg-white rounded-lg shadow-sm border p-6">
                <div class="flex items-center justify-between">
                    <div class="text-sm text-gray-600">
                        Showing <span class="font-medium">@((ErrorPageNumber - 1) * 20 + 1)</span> to 
                        <span class="font-medium">@Math.Min(ErrorPageNumber * 20, ErrorTotalCount)</span> of 
                        <span class="font-medium">@ErrorTotalCount</span> logs
                    </div>
                    
                    <div class="flex gap-2">
                        @if (ErrorPageNumber > 1)
                        {
                            <button class="px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors"
                                    hx-get="@GetPaginationUrl(ErrorPageNumber - 1)"
                                    hx-target="@GetTargetContainer()">
                                Previous
                            </button>
                        }
                        else
                        {
                            <button class="px-3 py-2 border opacity-50 border-gray-300 rounded-md text-sm font-medium text-gray-710"
                                    disabled>
                                Previous
                            </button>
                        }

                        @for (var i = Math.Max(1, ErrorPageNumber - 2); i <= Math.Min(ErrorTotalPages, ErrorPageNumber + 2); i++)
                        {
                            <button class="px-3 py-2 border text-sm font-medium transition-colors 
                                          @(i == ErrorPageNumber ? "border-blue-500 bg-blue-50 text-blue-600" : "border-gray-300 text-gray-700 hover:bg-gray-50")"
                                    hx-get="@GetPaginationUrl(i)"
                                    hx-target="@GetTargetContainer()">
                                @i
                            </button>
                        }

                        @if (ErrorPageNumber < ErrorTotalPages)
                        {
                            <button class="px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors"
                                    hx-get="@GetPaginationUrl(ErrorPageNumber + 1)"
                                    hx-target="@GetTargetContainer()">
                                Next
                            </button>
                        }
                        else
                        {
                            <button class="px-3 py-2 opacity-50 border border-gray-300 rounded-md text-sm font-medium text-gray-700"
                                    disabled>
                                Next
                            </button>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="bg-white rounded-lg shadow-sm border p-12 text-center">
            @if (ComponentTitle == "Error Logs")
            {
                <svg class="w-12 h-12 text-green-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No error logs found</h3>
                <p class="text-gray-600">Great! There are no error logs in the system.</p>
            }
            else
            {
                <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No information logs found</h3>
                <p class="text-gray-600">There are no information logs to display at this time.</p>
            }
        </div>
    }
</div>


@code {
    [Parameter] public string ComponentTitle { get; set; } = "Logs";
    [Parameter] public string ComponentSubTitle { get; set; } = "System logs";
    [Parameter] public List<ErrorLog>? ErrorLogs { get; set; }
    [Parameter] public int ErrorTotalCount { get; set; }
    [Parameter] public int ErrorTotalPages { get; set; }
    [Parameter] public int ErrorPageNumber { get; set; } = 1;

    private string GetPaginationUrl(int pageNumber)
    {
        return ComponentTitle switch
        {
            "Error Logs" => $"/admin/errors/get?errorPage={pageNumber}",
            "Information Logs" => $"/admin/errors/information/get?infoPage={pageNumber}",
            _ => $"?page={pageNumber}"
        };
    }

    private string GetTargetContainer()
    {
        return ComponentTitle switch
        {
            "Error Logs" => "#error-container",
            "Information Logs" => "#information-container",
            _ => "#logs-container"
        };
    }

    private string GetEscapedException(string exception)
    {
        return exception.Replace("'", "\\'").Replace("\"", "\\\"");
    }
}