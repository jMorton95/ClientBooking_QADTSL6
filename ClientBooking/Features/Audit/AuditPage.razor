@page "/admin/audit"
@attribute [Authorize(Policy = nameof(RoleName.Admin))]
@using ClientBooking.Shared.Enums
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Web

<PageTitle>Auditing</PageTitle>

<div class="space-y-6 mb-12" hx-get="/admin/audit/get" hx-trigger="load" hx-swap="innerHTML" id="audit-container">
    <div class="w-12 h-12 border-4 border-blue-200 border-t-blue-600 rounded-full animate-spin mx-auto"></div>
    <p class="mt-4 text-gray-600">Loading audit...</p>
</div>

<div class="space-y-6 mb-12" hx-get="/admin/errors/get" hx-trigger="load" hx-swap="innerHTML" id="error-container">
    <div class="w-12 h-12 border-4 border-blue-200 border-t-blue-600 rounded-full animate-spin mx-auto"></div>
    <p class="mt-4 text-gray-600">Loading error logs...</p>
</div>

<div class="space-y-6 mb-12" hx-get="/admin/errors/information/get" hx-trigger="load" hx-swap="innerHTML" id="information-container">
    <div class="w-12 h-12 border-4 border-blue-200 border-t-blue-600 rounded-full animate-spin mx-auto"></div>
    <p class="mt-4 text-gray-600">Loading information logs...</p>
</div>

