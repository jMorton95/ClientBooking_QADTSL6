@using ClientBooking.Shared.Enums
@using ClientBooking.Shared.Models

<div class="space-y-8">
    <div class="bg-white rounded-lg shadow-sm border p-6">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
                <p class="text-gray-600 mt-2">
                    @if (UserProfile != null)
                    {
                        <span class="font-medium">Welcome back, @UserProfile.FirstName!</span>
                    }
                    Here's your overview for the week.
                </p>
            </div>
            <div class="text-sm text-gray-500">
                Week of @DateTime.Today.ToString("MMM dd, yyyy")
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white rounded-lg shadow-sm border p-6">
            <div class="flex items-center">
                <div class="p-3 bg-blue-100 rounded-lg">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Weekly Bookings</p>
                    <p class="text-2xl font-bold text-gray-900">@WeeklyStats?.TotalBookings</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm border p-6">
            <div class="flex items-center">
                <div class="p-3 bg-green-100 rounded-lg">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Completed</p>
                    <p class="text-2xl font-bold text-gray-900">@WeeklyStats?.CompletedBookings</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm border p-6">
            <div class="flex items-center">
                <div class="p-3 bg-purple-100 rounded-lg">
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Hours This Week</p>
                    <p class="text-2xl font-bold text-gray-900">@WeeklyStats?.TotalHours.ToString("0.0")</p>
                </div>
            </div>
        </div>
    </div>
    
    <div>
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-gray-900">Today's Schedule</h2>
            <span class="text-sm text-gray-500">@TodayBookings?.Count scheduled</span>
        </div>

        @if (TodayBookings?.Any() == true)
        {
            <div class="bg-white rounded-lg shadow-sm border overflow-hidden">
                <div class="divide-y divide-gray-200">
                    @foreach (var booking in TodayBookings)
                    {
                        <div class="p-6 hover:bg-gray-50 transition-colors">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <div class="flex items-center space-x-3 mb-2">
                                        <h3 class="text-lg font-semibold text-gray-900">@booking.ClientName</h3>
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @GetStatusBadgeClass(booking.Status)">
                                            @booking.Status.ToString()
                                        </span>
                                    </div>

                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600">
                                        <div class="flex items-center">
                                            <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                            <span>@booking.StartDateTime.ToString("h:mm tt") - @booking.EndDateTime.ToString("h:mm tt")</span>
                                        </div>
                                        <div class="flex items-center">
                                            <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                                            </svg>
                                            <span>@((booking.EndDateTime - booking.StartDateTime).TotalHours.ToString("0.0")) hours</span>
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(booking.Notes))
                                    {
                                        <div class="mt-3 p-3 bg-gray-50 rounded-lg">
                                            <p class="text-sm text-gray-600">@booking.Notes</p>
                                        </div>
                                    }
                                </div>

                                <div class="flex items-center space-x-2 ml-4">
                                    <a href="@($"/booking/update/{booking.Id}")" class="p-2 text-gray-400 hover:text-blue-600 transition-colors" title="Edit booking">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="bg-white rounded-lg shadow-sm border p-12 text-center">
                <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No bookings today</h3>
                <p class="text-gray-600 mb-4">You don't have any scheduled appointments for today.</p>
                <a href="/clients" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors inline-flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    Schedule a Booking
                </a>
            </div>
        }
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div>
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-bold text-gray-900">Upcoming Bookings</h2>
                <span class="text-sm text-gray-500">@UpcomingBookings?.Count scheduled</span>
            </div>

            @if (UpcomingBookings?.Any() == true)
            {
                <div class="bg-white rounded-lg shadow-sm border overflow-hidden">
                    <div class="divide-y divide-gray-200">
                        @foreach (var booking in UpcomingBookings)
                        {
                            <div class="p-4 hover:bg-gray-50 transition-colors">
                                <div class="flex items-center justify-between">
                                    <div class="flex-1">
                                        <div class="flex items-center space-x-3 mb-1">
                                            <h3 class="font-semibold text-gray-900">@booking.ClientName</h3>
                                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium @GetStatusBadgeClass(booking.Status)">
                                                @booking.Status.ToString()
                                            </span>
                                        </div>
                                        <div class="text-sm text-gray-600">
                                            <div class="flex items-center">
                                                <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                                </svg>
                                                <span>@booking.StartDateTime.ToString("MMM dd") • @booking.StartDateTime.ToString("h:mm tt")</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <a href="@($"/booking/update/{booking.Id}")" class="p-1 text-gray-400 hover:text-blue-600 transition-colors" title="Edit booking">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="bg-white rounded-lg shadow-sm border p-8 text-center">
                    <svg class="w-10 h-10 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    <h3 class="text-md font-medium text-gray-900 mb-1">No upcoming bookings</h3>
                    <p class="text-gray-600 text-sm">Schedule some appointments to see them here.</p>
                </div>
            }
        </div>

        <div>
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-bold text-gray-900">Weekly Hours</h2>
                <span class="text-sm text-gray-500">@WeeklyHours?.TotalHours.ToString("0.0") total hours</span>
            </div>

            <div class="bg-white rounded-lg shadow-sm border p-6">
                @if (WeeklyHours?.DailyHours?.Any() == true && UserProfile is not null)
                {
                    var userTotalShiftDuration = UserProfile.WorkingHoursEnd.ToTimeSpan() - UserProfile.WorkingHoursStart.ToTimeSpan();
                    var breakDuration = UserProfile.BreakTimeEnd.ToTimeSpan() - UserProfile.BreakTimeStart.ToTimeSpan();
                    var userMaxWorkableDuration = userTotalShiftDuration - breakDuration;

                    var userMaxHours = userMaxWorkableDuration.TotalHours;
                    var daysOfWeek = new[] { "Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat" };

                    <div class="space-y-4">
                        @foreach (var dayName in daysOfWeek)
                        {
                            var dayData = WeeklyHours.DailyHours.FirstOrDefault(d => d.Date.ToString("ddd") == dayName);
                            var hours = dayData?.HoursWorked ?? 0;
                            var percentage = userMaxHours > 0 ? (hours / userMaxHours) * 100 : 0;

                            <div class="flex items-center justify-between">
                                <div class="w-12">
                                    <span class="text-sm font-medium text-gray-600">@dayName</span>
                                </div>
                                <div class="flex-1 mx-4">
                                    <div class="bg-gray-200 rounded-full h-2">
                                        <div class="bg-blue-600 h-2 rounded-full" style="width:@percentage%"></div>
                                    </div>
                                </div>
                                <div class="w-20 text-right">
                                    <span class="text-sm font-medium text-gray-900">@hours.ToString("0.0")h / @($"{userMaxHours}h")</span>
                                </div>
                            </div>
                        }
                    </div>

                }
                else
                {
                    <div class="text-center py-8">
                        <svg class="w-12 h-12 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <h3 class="text-md font-medium text-gray-900 mb-1">No hours recorded</h3>
                        <p class="text-gray-600 text-sm">Complete some bookings to see your weekly hours.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public required UserProfile UserProfile { get; set; }
    [Parameter] public WeeklyStats? WeeklyStats { get; set; }
    [Parameter] public List<BookingDto>? TodayBookings { get; set; }
    [Parameter] public List<BookingDto>? UpcomingBookings { get; set; }
    [Parameter] public WeeklyHours? WeeklyHours { get; set; }

    private string GetStatusBadgeClass(BookingStatus status)
    {
        return status switch
        {
            BookingStatus.Scheduled => "bg-blue-100 text-blue-800",
            BookingStatus.Confirmed => "bg-green-100 text-green-800",
            BookingStatus.Cancelled => "bg-red-100 text-red-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }
}