@using ClientBooking.Data.Entities

<div class="space-y-6">
    <div class="bg-white rounded-lg shadow-sm border p-6">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Clients</h1>
                <p class="text-gray-600 mt-2">Manage your clients and their bookings.</p>
            </div>
            <a href="/client/create" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
                Add Client
            </a>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border p-6">
        <h2 class="text-xl pb-2 font-bold text-gray-800">Search for clients and sort the results</h2>
        <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
            <div class="flex-1 w-full md:w-auto">
                <input type="text"
                       placeholder="Search clients..."
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-blue-500"
                       value="@SearchTerm"
                       name="search"
                       autofocus
                       hx-get="/clients/get"
                       hx-trigger="keyup changed delay:500ms"
                       hx-target="#clients-container"
                       hx-include="[name='sortBy'], [name='sortDirection']"
                       onfocus="this.setSelectionRange(this.value.length, this.value.length)"/>
            </div>

            <div class="flex gap-4 items-center">
                <select class="px-4 py-2 border border-gray-300 rounded-md focus:outline-blue-500"
                        name="sortBy"
                        hx-get="/clients/get"
                        hx-trigger="change"
                        hx-target="#clients-container"
                        hx-include="[name='search'], [name='sortDirection']">
                    <option value="name" selected="@(SortBy == "name")">Name</option>
                    <option value="email" selected="@(SortBy == "email")">Email</option>
                    <option value="bookings" selected="@(SortBy == "bookings")">Number of Bookings</option>
                </select>

                <button class="p-2 border border-gray-300 rounded-md hover:bg-gray-50 transition-colors"
                        name="sortDirection"
                        value="@(SortDirection == "asc" ? "desc" : "asc")"
                        hx-get="/clients/get"
                        hx-trigger="click"
                        hx-target="#clients-container"
                        hx-include="[name='search'], [name='sortBy']">
                    @if (SortDirection == "asc")
                    {
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"/>
                        </svg>
                    }
                    else
                    {
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                        </svg>
                    }
                </button>
            </div>
        </div>
    </div>
    
    @if (Clients?.Any() == true)
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var client in Clients)
            {
                <div class="bg-white rounded-lg shadow-sm border p-6 hover:shadow-md transition-shadow">
                    <div class="flex items-start justify-between mb-4">
                        <h3 class="text-lg font-semibold text-gray-900 truncate">@client.Name</h3>
                        <div class="flex gap-2">
                            <a href="@($"/client/edit/{client.Id}")" class="text-blue-600 hover:text-blue-800 transition-colors">
                                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                            </a>
                        </div>
                    </div>

                    <div class="space-y-3">
                        <div class="flex items-center text-sm text-gray-600">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            <span class="truncate">@client.Email</span>
                        </div>

                        <div class="flex items-center text-sm text-gray-600">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            <span>@client.Bookings.Count booking@(client.Bookings.Count != 1 ? "s" : "")</span>
                        </div>

                        @if (!string.IsNullOrEmpty(client.Description))
                        {
                            <div class="text-sm text-gray-600 line-clamp-2">
                                @client.Description
                            </div>
                        }
                    </div>

                    <div class="mt-4 pt-4 border-t border-gray-100">
                        <div class="flex justify-between items-center">
                            <span class="text-xs text-gray-500">
                                Last booking:
                                @if (client.Bookings.Any())
                                {
                                    @client.Bookings.Max(b => b.SavedAt).ToString("MMM dd, yyyy")
                                }
                                else
                                {
                                    <span>No bookings</span>
                                }
                            </span>
                            <button class="text-sm text-blue-600 hover:text-blue-800 font-medium transition-colors">
                                View Details
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (TotalPages > 1)
    {
            <div class="bg-white rounded-lg shadow-sm border p-6">
                <div class="flex items-center justify-between">
                    <div class="text-sm text-gray-600">
                        Showing <span class="font-medium">@((CurrentPage - 1) * PageSize + 1)</span> to 
                        <span class="font-medium">@Math.Min(CurrentPage * PageSize, TotalCount)</span> of 
                        <span class="font-medium">@TotalCount</span> clients
                    </div>
                    
                    <div class="flex gap-2">
                        @if (CurrentPage > 1)
                        {
                            <button class="px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors"
                                    hx-get="/clients/get"
                                    hx-target="#clients-container"
                                    hx-include="[name='search'], [name='sortBy'], [name='sortDirection']"
                                    name="page"
                                    value="@(CurrentPage - 1)">
                                Previous
                            </button>
                        }

                        @for (var i = Math.Max(1, CurrentPage - 2); i <= Math.Min(TotalPages, CurrentPage + 2); i++)
                        {
                            <button class="px-3 py-2 border text-sm font-medium transition-colors 
                                          @(i == CurrentPage ? "border-blue-500 bg-blue-50 text-blue-600" : "border-gray-300 text-gray-700 hover:bg-gray-50")"
                                    hx-get="/clients/get"
                                    hx-target="#clients-container"
                                    hx-include="[name='search'], [name='sortBy'], [name='sortDirection']"
                                    name="page"
                                    value="@i">
                                @i
                            </button>
                        }

                        @if (CurrentPage < TotalPages)
                        {
                            <button class="px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors"
                                    hx-get="/clients/get"
                                    hx-target="#clients-container"
                                    hx-include="[name='search'], [name='sortBy'], [name='sortDirection']"
                                    name="page"
                                    value="@(CurrentPage + 1)">
                                Next
                            </button>
                        }
                    </div>
                </div>
            </div>
        
    }
    else
    {
        <div class="bg-white rounded-lg shadow-sm border p-12 text-center">
            <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No clients found</h3>
            <p class="text-gray-600 mb-4">Get started by adding your first client.</p>
            <button class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
                Add Client
            </button>
        </div>
    }
</div>

@code {
    [Parameter] public List<Client> Clients { get; set; } = [];
    [Parameter] public int CurrentPage { get; set; } = 1;
    [Parameter] public int PageSize { get; set; }
    [Parameter] public int TotalCount { get; set; }
    [Parameter] public int TotalPages { get; set; }
    [Parameter] public string SortBy { get; set; } = "name";
    [Parameter] public string SortDirection { get; set; } = "asc";
    [Parameter] public string SearchTerm { get; set; } = string.Empty;
}