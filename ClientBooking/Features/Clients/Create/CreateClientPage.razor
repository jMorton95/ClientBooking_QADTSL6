@attribute [Authorize]
@page "/client/create"
@using ClientBooking.Components
@using ClientBooking.Components.Generic
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web

<PageTitle>Create Client</PageTitle>
   
<div class="space-y-6" id="create-client-container">
    <div class="bg-white rounded-lg shadow-sm border p-6">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Add New Client</h1>
                <p class="text-gray-600 mt-2">Create a new client profile to start managing bookings.</p>
            </div>
            <a href="/clients" 
               class="px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors">
                Back to Clients
            </a>
        </div>
    </div>
    
    @if (ErrorMessage is not null)
    {
        <ErrorMessageComponent ErrorMessage="@ErrorMessage" />
    }

    <div class="bg-white rounded-lg shadow-sm border">
        <EditForm EditContext="_editContext" hx-post="/client/create" hx-target="#create-client-container">
            <div class="p-6 space-y-8">
                <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Client Information</h3>
                    <div class="grid grid-cols-1 gap-6">
                        <div>
                            <label for="@nameof(ClientRequest.Name)" class="block text-sm font-medium text-gray-700 mb-2">
                                Client Name *
                            </label>
                            <InputText @bind-Value="ClientRequest.Name" 
                                       Name="@nameof(ClientRequest.Name)"
                                       class="w-full bg-gray-100 rounded py-3 px-4 text-sm focus:bg-transparent focus:outline-blue-600" 
                                       placeholder="Enter client name" />
                            <FluentValidationMessage TModel="ClientRequest" For="@(x => x.Name)" />
                        </div>
                        
                        <div>
                            <label for="@nameof(ClientRequest.Email)" class="block text-sm font-medium text-gray-700 mb-2">
                                Email Address *
                            </label>
                            <InputText @bind-Value="ClientRequest.Email" 
                                       Name="@nameof(ClientRequest.Email)"
                                       class="w-full bg-gray-100 rounded py-3 px-4 text-sm focus:bg-transparent focus:outline-blue-600" 
                                       placeholder="Enter email address" />
                            <FluentValidationMessage TModel="ClientRequest" For="@(x => x.Email)" />
                        </div>

                        <div>
                            <label for="@nameof(ClientRequest.Description)" class="block text-sm font-medium text-gray-700 mb-2">
                                Description
                            </label>
                            <textarea @bind="ClientRequest.Description"
                                      Name="@nameof(ClientRequest.Description)"
                                      class="w-full bg-gray-100 rounded py-3 px-4 text-sm focus:bg-transparent focus:outline-blue-600 h-32"
                                      placeholder="Enter client description or notes..."></textarea>
                            <FluentValidationMessage TModel="ClientRequest" For="@(x => x.Description)" />
                        </div>
                    </div>
                </div>

                @if (ValidationErrors?.Any() == true)
                {
                    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                        <h4 class="text-red-800 font-medium mb-2">Please correct the following errors:</h4>
                        <ul class="text-red-700 text-sm list-disc list-inside">
                            @foreach (var error in ValidationErrors.Values.SelectMany(v => v))
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                }

                <div class="flex items-center justify-between space-x-4 pt-6 border-t">
                    <a href="/clients" 
                       class="px-4 py-2 text-sm font-medium text-gray-700 border border-gray-300 rounded-md hover:bg-gray-50 transition-colors">
                        Cancel
                    </a>
                    <div class="flex space-x-3">
                        <button type="submit" 
                                class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors">
                            Create Client
                        </button>
                    </div>
                </div>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter] public required ClientRequest ClientRequest { get; set; } = new();
    [Parameter] public Dictionary<string, string[]>? ValidationErrors { get; set; }
    [Parameter] public string? ErrorMessage { get; set; }

    private EditContext? _editContext;

    protected override void OnInitialized()
    {
        _editContext = new EditContext(ClientRequest);
    }
}