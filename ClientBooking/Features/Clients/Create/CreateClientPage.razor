@attribute [Authorize]
@page "/client/create"
@using ClientBooking.Components
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Forms

   
<div class="space-y-6" id="create-client-container">
    <div class="bg-white rounded-lg shadow-sm border p-6">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Add New Client</h1>
                <p class="text-gray-600 mt-2">Create a new client profile to start managing bookings.</p>
            </div>
            <a href="/clients" 
               class="px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors">
                Back to Clients
            </a>
        </div>
    </div>

    @if (ShowSuccessMessage)
    {
        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
            <div class="flex items-center">
                <svg class="w-5 h-5 text-green-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-green-800 font-medium">Client created successfully!</span>
                <a href="/clients" class="ml-4 text-green-600 hover:text-green-800 underline">View all clients</a>
            </div>
        </div>
    }

    @if (ErrorMessage is not null)
    {
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex items-center">
                <svg class="w-5 h-5 text-red-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <span class="text-red-800 font-medium">@ErrorMessage</span>
            </div>
        </div>
    }

    <div class="bg-white rounded-lg shadow-sm border">
        <EditForm EditContext="_editContext" hx-post="/client/create" hx-target="#create-client-container">
            <div class="p-6 space-y-8">
                <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Client Information</h3>
                    <div class="grid grid-cols-1 gap-6">
                        <div>
                            <label for="@nameof(CreateClientRequest.Name)" class="block text-sm font-medium text-gray-700 mb-2">
                                Client Name *
                            </label>
                            <InputText @bind-Value="CreateClientRequest.Name" 
                                       Name="@nameof(CreateClientRequest.Name)"
                                       class="w-full bg-gray-100 rounded py-3 px-4 text-sm focus:bg-transparent focus:outline-blue-600" 
                                       placeholder="Enter client name" />
                            <FluentValidationMessage TModel="CreateClientRequest" For="@(x => x.Name)" />
                        </div>
                        
                        <div>
                            <label for="@nameof(CreateClientRequest.Email)" class="block text-sm font-medium text-gray-700 mb-2">
                                Email Address *
                            </label>
                            <InputText @bind-Value="CreateClientRequest.Email" 
                                       Name="@nameof(CreateClientRequest.Email)"
                                       class="w-full bg-gray-100 rounded py-3 px-4 text-sm focus:bg-transparent focus:outline-blue-600" 
                                       placeholder="Enter email address" />
                            <FluentValidationMessage TModel="CreateClientRequest" For="@(x => x.Email)" />
                        </div>

                        <div>
                            <label for="@nameof(CreateClientRequest.Description)" class="block text-sm font-medium text-gray-700 mb-2">
                                Description
                            </label>
                            <textarea @bind="CreateClientRequest.Description"
                                      Name="@nameof(CreateClientRequest.Description)"
                                      class="w-full bg-gray-100 rounded py-3 px-4 text-sm focus:bg-transparent focus:outline-blue-600 h-32"
                                      placeholder="Enter client description or notes..."></textarea>
                            <FluentValidationMessage TModel="CreateClientRequest" For="@(x => x.Description)" />
                        </div>
                    </div>
                </div>

                @if (ValidationErrors?.Any() == true)
                {
                    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                        <h4 class="text-red-800 font-medium mb-2">Please correct the following errors:</h4>
                        <ul class="text-red-700 text-sm list-disc list-inside">
                            @foreach (var error in ValidationErrors.Values.SelectMany(v => v))
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                }

                <div class="flex items-center justify-between space-x-4 pt-6 border-t">
                    <a href="/clients" 
                       class="px-4 py-2 text-sm font-medium text-gray-700 border border-gray-300 rounded-md hover:bg-gray-50 transition-colors">
                        Cancel
                    </a>
                    <div class="flex space-x-3">
                        <button type="submit" 
                                class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors">
                            Create Client
                        </button>
                    </div>
                </div>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter] public required CreateClientRequest CreateClientRequest { get; set; } = new();
    [Parameter] public Dictionary<string, string[]>? ValidationErrors { get; set; }
    [Parameter] public bool ShowSuccessMessage { get; set; }
    [Parameter] public string? ErrorMessage { get; set; }

    private EditContext? _editContext;

    protected override void OnInitialized()
    {
        _editContext = new EditContext(CreateClientRequest);
    }
}