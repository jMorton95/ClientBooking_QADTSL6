@page "/register"
@layout AuthenticationLayout
@attribute [AllowAnonymous]
@using ClientBooking.Authentication
@using ClientBooking.Components
@using ClientBooking.Components.Layout
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@inject NavigationManager NavigationManager
@inject ISessionStateManager SessionStateManager

<PageTitle>Register</PageTitle>

<CascadingValue Value="ValidationErrors">
  <div id="registration-container-div" class="min-h-screen bg-gray-50 flex justify-center py-6 sm:px-6 lg:px-8">
    <EditForm EditContext="_editContext" hx-post="/register" hx-target="#registration-container-div" id="registration" class="w-full max-w-md space-y-8">
      <div class="bg-white rounded-lg shadow-sm border p-8">
        <div class="text-center mb-8">
          <div class="flex justify-center mb-6">
            <div class="p-3 bg-blue-100 rounded-lg">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
              </svg>
            </div>
          </div>
          <h1 class="text-2xl font-bold text-gray-900 mb-2">Create your account</h1>
          <p class="text-gray-600">Register a new account with us.</p>
        </div>

        <div class="space-y-6">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">First name</label>
              <InputText @bind-Value="RegistrationRequest.FirstName"
                         id="firstName"
                         class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                         placeholder="John"/>
              <FluentValidationMessage TModel="RegistrationRequest" For="@(x => x.FirstName)" />
            </div>
            
            <div>
              <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">Last name</label>
              <InputText @bind-Value="RegistrationRequest.LastName"
                         id="lastName"
                         class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                         placeholder="Doe"/>
              <FluentValidationMessage TModel="RegistrationRequest" For="@(x => x.LastName)" />
            </div>
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email address</label>
            <InputText @bind-Value="RegistrationRequest.Email"
                       type="email"
                       id="email"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                       placeholder="you@example.com"/>
            <FluentValidationMessage TModel="RegistrationRequest" For="@(x => x.Email)" />
          </div>

          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <h4 class="text-sm font-medium text-blue-800 mb-2">Password requirements:</h4>
            <ul class="text-sm text-blue-700 space-y-1 list-disc pl-5">
              <li>Minimum 12 characters</li>
              <li>At least one uppercase letter (A-Z)</li>
              <li>At least one lowercase letter (a-z)</li>
              <li>At least one number (0-9)</li>
            </ul>
          </div>
          
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <label for="passwordOne" class="block text-sm font-medium text-gray-700 mb-2">Password</label>
              <InputText @bind-Value="RegistrationRequest.PasswordOne"
                         id="passwordOne"
                         type="password"
                         class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                         placeholder="••••••••"/>
              <FluentValidationMessage TModel="RegistrationRequest" For="@(x => x.PasswordOne)" />
            </div>

            <div>
              <label for="passwordTwo" class="block text-sm font-medium text-gray-700 mb-2">Confirm password</label>
              <InputText @bind-Value="RegistrationRequest.PasswordTwo"
                         id="passwordTwo"
                         type="password"
                         class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                         placeholder="••••••••"/>
              <FluentValidationMessage TModel="RegistrationRequest" For="@(x => x.PasswordTwo)" />
            </div>
            
          </div>
          

          @if (ErrorMessage != null)
          {
            <div class="rounded-lg bg-red-50 border border-red-200 p-4">
              <div class="text-sm text-red-700">@ErrorMessage</div>
            </div>
          }

          <div>
            <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
              Create account
            </button>
          </div>

          <div class="text-center">
            <p class="text-sm text-gray-600">
              Already have an account? 
              <a href="/login" class="font-medium text-blue-600 hover:text-blue-500">Sign in</a>
            </p>
          </div>
        </div>
      </div>
    </EditForm>
  </div>
</CascadingValue>

@code {
    [Parameter] public RegistrationRequest RegistrationRequest { get; set; } = new();
    [Parameter] public Dictionary<string, string[]>? ValidationErrors { get; set; } = new();
    [Parameter] public string? ErrorMessage { get; set; }

    private EditContext? _editContext;

    protected override void OnInitialized()
    {
        //If the user is already logged in, redirect away from the registration page for positive UX.
        if (SessionStateManager.IsAuthenticated())
        {
            NavigationManager.NavigateTo("/", replace: true);
            return;
        }
        
        _editContext = new EditContext(RegistrationRequest);
    }
}