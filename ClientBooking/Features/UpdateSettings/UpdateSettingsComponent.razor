@using ClientBooking.Components
@using ClientBooking.Components.Generic
@using ClientBooking.Shared.Enums
@using Microsoft.AspNetCore.Components.Forms

<div class="bg-white rounded-lg shadow-sm border p-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Site Settings</h1>
            <p class="text-gray-600 mt-2">Configure default working hours, booking durations, and user roles.</p>
        </div>
        <div class="flex items-center space-x-3">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                Current version: @UpdateSettingsRequest.Version
            </span>
        </div>
    </div>
</div>

<div class="bg-gray-50 rounded-lg border p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Current Settings Preview</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="text-center p-4 bg-white rounded-lg border">
            <div class="text-2xl font-bold text-blue-600">@UpdateSettingsRequest.DefaultWorkingHoursStart - @UpdateSettingsRequest.DefaultWorkingHoursEnd</div>
            <div class="text-sm text-gray-600 mt-1">Standard Working Hours</div>
        </div>
        <div class="text-center p-4 bg-white rounded-lg border">
            <div class="text-2xl font-bold text-green-600">@UpdateSettingsRequest.DefaultBreakTimeStart - @UpdateSettingsRequest.DefaultBreakTimeEnd</div>
            <div class="text-sm text-gray-600 mt-1">Standard Break Time</div>
        </div>
        <div class="text-center p-4 bg-white rounded-lg border">
            <div class="text-2xl font-bold text-purple-600">@UpdateSettingsRequest.DefaultBookingDuration min</div>
            <div class="text-sm text-gray-600 mt-1">Default Booking Duration</div>
        </div>
    </div>
</div>

@if (ShowSuccessMessage)
{
    <div class="bg-green-50 border border-green-200 rounded-lg p-4">
        <div class="flex items-center">
            <svg class="w-5 h-5 text-green-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-green-800 font-medium">Settings updated successfully!</span>
        </div>
    </div>
}

@if (ErrorMessage is not null)
{
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <div class="flex items-center">
            <svg class="w-5 h-5 text-red-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-red-800 font-medium">@ErrorMessage</span>
        </div>
    </div>
}

<div class="bg-white rounded-lg shadow-sm border">
    <EditForm EditContext="_editContext" hx-post="/admin/settings" hx-target="#UpdateSettingsRequest-container" id="UpdateSettingsRequest-form">
        <div class="p-6 space-y-8">
            <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Default Working Hours</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="@nameof(UpdateSettingsRequest.DefaultWorkingHoursStart)" class="block text-sm font-medium text-gray-700 mb-2">Start Time</label>
                        
                        
                        <InputTime Value="UpdateSettingsRequest.DefaultWorkingHoursStart"
                                       Name="@nameof(UpdateSettingsRequest.DefaultWorkingHoursStart)" />
                      
                        <FluentValidationMessage TModel="UpdateSettingsRequest" For="@(x => x.DefaultWorkingHoursStart)" />
                    </div>
                <div>
                    <label for="@nameof(UpdateSettingsRequest.DefaultWorkingHoursEnd)" class="block text-sm font-medium text-gray-700 mb-2">End Time</label>
                    
                    <InputTime Value="UpdateSettingsRequest.DefaultWorkingHoursEnd"
                               Name="@nameof(UpdateSettingsRequest.DefaultWorkingHoursEnd)" />
                       
                    <FluentValidationMessage TModel="UpdateSettingsRequest" For="@(x => x.DefaultWorkingHoursEnd)" />
                    </div>
                </div>
            </div>

            <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Default Break Time</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="@nameof(UpdateSettingsRequest.DefaultBreakTimeStart)" class="block text-sm font-medium text-gray-700 mb-2">Start Time</label>
                        
                        <InputTime Value="UpdateSettingsRequest.DefaultBreakTimeStart"
                                   Name="@nameof(UpdateSettingsRequest.DefaultBreakTimeStart)" />
                        
                        <FluentValidationMessage TModel="UpdateSettingsRequest" For="@(x => x.DefaultBreakTimeStart)" />
                    </div>
                    <div>
                        <label for="@nameof(UpdateSettingsRequest.DefaultBreakTimeEnd)" class="block text-sm font-medium text-gray-700 mb-2">End Time</label>
                        
                        <InputTime Value="UpdateSettingsRequest.DefaultBreakTimeEnd"
                                   Name="@nameof(UpdateSettingsRequest.DefaultBreakTimeEnd)" />
                       
                        <FluentValidationMessage TModel="UpdateSettingsRequest" For="@(x => x.DefaultBreakTimeEnd)" />
                    </div>
                </div>
            </div>

            <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Booking Settings</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="@nameof(UpdateSettingsRequest.DefaultBookingDuration)" class="block text-sm font-medium text-gray-700 mb-2">Default Duration (minutes)</label>
                        <InputNumber @bind-Value="UpdateSettingsRequest.DefaultBookingDuration" name="@nameof(UpdateSettingsRequest.DefaultBookingDuration)"
                                    class="w-full bg-gray-100 rounded py-3 px-4 text-sm focus:bg-transparent focus:outline-blue-600" />
                        <FluentValidationMessage TModel="UpdateSettingsRequest" For="@(x => x.DefaultBookingDuration)" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Default User Role</label>
                        <InputSelect @bind-Value="UpdateSettingsRequest.DefaultUserRole" name="@nameof(UpdateSettingsRequest.DefaultUserRole)"
                                    class="w-full bg-gray-100 rounded py-3 px-4 text-sm focus:bg-transparent focus:outline-blue-600">
                            <option value="@RoleName.User">User</option>
                            <option value="@RoleName.Admin">Admin</option>
                        </InputSelect>
                        <FluentValidationMessage TModel="UpdateSettingsRequest" For="@(x => x.DefaultUserRole)" />
                    </div>
                </div>
            </div>

            @if (ValidationErrors?.Any() == true)
            {
                <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                    <h4 class="text-red-800 font-medium mb-2">Please correct the following errors:</h4>
                    <ul class="text-red-700 text-sm list-disc list-inside">
                        @foreach (var error in ValidationErrors.Values.SelectMany(v => v))
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }

            <div class="flex items-center justify-end space-x-4 pt-6 border-t">
                <button type="submit" 
                        class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Save Settings
                </button>
            </div>
        </div>
    </EditForm>
</div>


@code {
    [Parameter] public required UpdateSettingsRequest UpdateSettingsRequest { get; set; }
    [Parameter] public Dictionary<string, string[]>? ValidationErrors { get; set; }
    [Parameter] public bool ShowSuccessMessage { get; set; }
    [Parameter] public string? ErrorMessage { get; set; }

    private EditContext? _editContext;

    protected override void OnInitialized()
    {
        _editContext = new EditContext(UpdateSettingsRequest);
    }
}